    "@prisma/client": "^5.18.0",
    "@sentry/node": "^9.27.0",
    "@types/multer": "^2.0.0",
    "@vercel/blob": "^2.0.0",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.65.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "multer": "^2.0.2",
