{
  "name": "marketor",
  "version": "0.1.0",
  "private": true,
  "description": "GrowthPilot AI monorepo (workspace: api, web, shared, docs).",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "web:dev": "npm run dev --workspace apps/web",
    "web:build": "npm run build --workspace apps/web",
    "api:dev": "npm run dev --workspace apps/api",
    "api:build": "npm run build --workspace apps/api",
    "lint": "eslint apps/api/src apps/web/app apps/web/components apps/web/contexts apps/web/lib apps/web/services apps/web/types",
    "lint:fix": "eslint --fix apps/api/src apps/web/app apps/web/components apps/web/contexts apps/web/lib apps/web/services apps/web/types",
    "test": "npm run test --workspace apps/api",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "dependencies": {
    "@nestjs/throttler": "^6.4.0"
  }
}
